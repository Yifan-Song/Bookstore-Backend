<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/booktable</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->
    <mapping class="Entity.BooktableEntity"/>
    <mapping resource="Entity/BooktableEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.BooktableEntity"/>
      <mapping resource="BookStoreBackEnd/Entity/BooktableEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.BookImageEntity"/>
      <mapping resource="BookStoreBackEnd/Entity/BookImageEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.BooklistEntity"/>
      <mapping resource="BookStoreBackEnd/Entity/BooklistEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.UserEntity"/>
      <mapping resource="BookStoreBackEnd/Entity/UserEntity.hbm.xml"/>
      <mapping resource="BookStoreBackEnd/Entity/BookEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.BookEntity"/>
      <mapping class="BookStoreBackEnd.Entity.UserEntity"/>
      <mapping resource="BookStoreBackEnd/Entity/BookcacheEntity.hbm.xml"/>
      <mapping class="BookStoreBackEnd.Entity.BookcacheEntity"/>
      <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>